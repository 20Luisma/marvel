{
  "name": "creawebes/openai-service",
  "description": "Microservicio PHP para conectar con OpenAI desde la app principal",
  "require": {
    "php": "^8.2",
    "guzzlehttp/guzzle": "^7.9",
    "vlucas/phpdotenv": "^5.6"
  },
  "autoload": {
    "psr-4": {
      "Creawebes\\OpenAI\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "autoload-dev": {
    "psr-4": {
      "Creawebes\\OpenAI\\Tests\\": "tests/"
    }
  }
}

