############################
# openai-service (.env) - STAGING (DIRECT SUBDOMAINS)
# Copia este contenido a .env en openai-service/.
############################

APP_ENV=hosting
APP_DEBUG=0

# Clave hacia OpenAI
OPENAI_API_KEY=TU_OPENAI_API_KEY_AQUI
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# HMAC interno (DEBE COINCIDIR CON LA APP PRINCIPAL)
INTERNAL_API_KEY=change-me-strong-random-staging

# CORS (Pemitir desde la app de staging y el servicio RAG)
ALLOWED_ORIGINS=https://staging.contenido.creawebes.com,https://rag-staging.contenido.creawebes.com,https://openai-staging.contenido.creawebes.com

# Token Pricing
OPENAI_PRICE_PROMPT_PER_1K=0.00015
OPENAI_PRICE_COMPLETION_PER_1K=0.0006
