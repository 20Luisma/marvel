############################
# rag-service (.env) - STAGING (plantilla)
# Copia este archivo como .env en el servidor de staging.
############################

APP_ENV=hosting
APP_DEBUG=0

# Cliente LLM (microservicio OpenAI)
OPENAI_SERVICE_URL=https://staging.contenido.creawebes.com/openai-service/v1/chat

# Firma interna HMAC
INTERNAL_API_KEY=change-me-strong-random-staging

# RAG embeddings (opcional)
RAG_USE_EMBEDDINGS=0
RAG_EMBEDDINGS_AUTOREFRESH=0
RAG_LOG_FILE=storage/logs/rag.log

# Circuit Breaker (OpenAI Service)
CB_FAILURE_THRESHOLD=3
CB_OPEN_TTL_SECONDS=30
CB_HALF_OPEN_MAX_CALLS=1
CB_STATE_FILE=storage/ai/circuit_breaker.json

# Solo si generas embeddings con OpenAI directamente desde este servicio
OPENAI_API_KEY=

# Logs de tokens
TOKENS_LOG_PATH=
# AI_TOKENS_LOG_PATH=/ruta/absoluta/al/storage/ai/tokens.log
