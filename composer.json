{
    "name": "clean-marvel/album",
    "description": "Clean Marvel Album - Clean Architecture PHP 8.2 app with API and UI.",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "sentry/sentry": "^4.18"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Src\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "serve": "php -S localhost:8080 -t public",
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-clover coverage.xml",
        "security:audit": "composer audit --no-dev"
    }
}
